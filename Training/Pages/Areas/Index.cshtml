@page
@model Pages.AreasPage

@{
    ViewData["Title"] = "Areas";
}

<h1>Areas</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].AreaBossName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.AreaBossName)
            </th>
            

            <td>
                <a asp-page="./Edit" asp-route-handler="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-handler="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-handler="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
